{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "rootDirs": ["src", "libs"],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "paths": {
            "api/telegram-bot": ["libs/telegram-bot/src"],
            "api/telegram-bot/*": ["libs/telegram-bot/src/*"],
            "api/instagram-bot": ["libs/instagram-bot/src"],
            "api/instagram-bot/*": ["libs/instagram-bot/src/*"],
            "api/pinterest-rss": ["libs/pinterest-rss/src"],
            "api/pinterest-rss/*": ["libs/pinterest-rss/src/*"],
            "api/pixiv-bot": ["libs/pixiv-bot/src"],
            "api/pixiv-bot/*": ["libs/pixiv-bot/src/*"],
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts", "__test__", "libs"]
}
