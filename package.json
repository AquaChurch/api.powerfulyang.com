{
  "name": "api.powerfulyang.com",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "prod": "npm run build && cross-env PORT=8000 && pm2 start dist/main.js",
    "re-prod": "git pull && pm2 stop main && npm run build && pm2 reload main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.6",
    "@nestjs/core": "^7.0.6",
    "@nestjs/platform-express": "^7.0.6",
    "@nestjs/typeorm": "^7.0.0",
    "cos-nodejs-sdk-v5": "^2.5.20",
    "dayjs": "^1.8.23",
    "imagemin": "^7.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "mkdirp": "^1.0.4",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "sharp": "^0.25.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2",
    "@types/imagemin-mozjpeg": "^8.0.0",
    "@types/sharp": "^0.24.0",
    "@nestjs/testing": "^7.0.6",
    "@types/express": "4.17.3",
    "@types/imagemin": "^7.0.0",
    "@types/jest": "^25.1.4",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "12.12.31",
    "@types/supertest": "2.0.8",
    "jest": "25.2.3",
    "prettier": "2.0.2",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.8.1",
    "tsc-watch": "4.2.3",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
